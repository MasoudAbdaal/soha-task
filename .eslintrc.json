{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "es6": true,
        "jest": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    
  "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "settings": {
        "react": {
          "version": "17.0.2"
        }
      },
    "plugins": [
        "react", "prettier"
    ],
    "rules": {
    "no-case-declarations": "off",
    "prettier/prettier": "error",
    "react/prop-types": "off"
    }
}
